<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>

<body>
  <h1>Pizza Order</h1>
  <h2>Create your pizza</h2>
  <form action="/confirmation/" method="POST" autocomplete="on">
    <table width="300px" border="1">
      <tr><td colspan="4"><h3>Toppings:</h3></td></tr>
      <tr>
<%  var i =0; 
    for(let key in menu.toppings) { 
      if(i!=0 && i%2==0){                     %>
      </tr>
      <tr>
<%    }                                       %>
        <td><%= key %></td>
        <td><input type="checkbox" name="<%= key %>"/></td> 
<%    i++;                        
    }                                         %> 
      </tr>
    </table> 
    <!-- Ends toppings table --> <br>
    <table  width="300px" border="1">
      <tr><td colspan="6"><h3>Crust:</h3></td></tr>
      <tr>
<%  var i =0; 
    for(let key in menu.crust) { 
      var checked = ''
      if(i==0) checked = 'checked';
      if(i!=0 && i%3==0){                     %>
      </tr>
      <tr> 
<%    }                                       %>
        <td><input type="radio" name="crust" value="<%= key %>" <%= checked %>/></td> 
        <td><%= key %></td>
        
<%    i++;                        
    }                                         %> 
      </tr>
    </table>   
    <!-- Ends crust table --> <br>
    <table  width="300px" border="1">
      <tr><td colspan="6"><h3>Size:</h3></td></tr>
      <tr>
<%  var i =0; 
    for(let key in menu.size) { 
      var checked = ''
      if(i==0) checked = 'checked';
      if(i!=0 && i%3==0){                     %>
      </tr>
      <tr>
<%    }                                       %>
        <td><input type="radio" name="size" value="<%= key %>" <%= checked %>/></td> 
        <td><%= key %></td>
        
<%    i++;                        
    }                                         %> 
      </tr>
    </table>   
    <!-- Ends size table -->                            

      
    </table><br>
    <table>
      <tr>
        <td><span>Quantity: </span> </td>
        <td><input type="number" name="quantity" min="1" max="10" value="1"></td>
      </tr>
      <tr>
        <td><span>Name: </span></td>
        <td><input type="text" name="name"/></td>
<%    if (errors.name) {       %>
        <td><span><%=errors.name%></span></td>
<%    } %>
      </tr>
      <tr>
        <td><span>Phone: </span></td>
        <td><input type="text" name="phone"/></td>
<%    if (errors.phone) {       %>
          <td><span><%=errors.phone%></span></td>
<%    } %>        
      </tr>
      <tr>
        <td><span>Address: </span></td>
        <td><input type="text" name="address"/></td>
<%    if (errors.address) {       %>
          <td><span><%=errors.address%></span></td>
<%    } %>    
      </tr>
    </table><br>

    <button type="submit" name="submit">Order</button>
  </form>


</body>

</html>